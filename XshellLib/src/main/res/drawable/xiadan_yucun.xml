<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按下时的背景图片 -->
    <item  android:state_pressed="true">
        <shape>
            <stroke android:width="1dp" android:color="#2A93F9" />
            <solid android:color="#4213e9" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- 默认时的背景图片 -->
    <item>
        <shape>
            <stroke android:width="1dp" android:color="#2A93F9" />
            <solid android:color="#2A93F9" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>