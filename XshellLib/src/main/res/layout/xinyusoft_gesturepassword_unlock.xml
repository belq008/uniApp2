<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gesturepwd_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/gesturepwd_creat_title"
        android:layout_width="match_parent"
        android:layout_height="60.0dip"
        android:gravity="center"
        android:text="手势密码登录"
        android:textColor="@android:color/white"
        android:textSize="20sp" />


    <com.xshell.xshelllib.view.DSAvatarImageView
        android:id="@+id/iv_user_logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerInside"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/iv_user_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="#ee783c" />


    <TextView
        android:id="@+id/gesturepwd_unlock_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dip"
        android:layout_marginRight="40.0dip"
        android:layout_marginTop="0.0dip"
        android:gravity="center_horizontal"
        android:shadowColor="#b3ffffff"
        android:shadowRadius="1.0"
        android:text="请绘制手势密码"
        android:textColor="@android:color/white"
        android:textSize="16.0sp"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/gesturepwd_unlock_failtip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dip"
        android:layout_marginRight="40.0dip"
        android:layout_marginTop="0.0dip"
        android:gravity="center_horizontal"
        android:shadowColor="#b3ffffff"
        android:shadowRadius="1.0"
        android:text="5次失败后，需要重新登录。"
        android:textColor="@android:color/white"
        android:textSize="12.0sp"
        android:visibility="invisible" />


    <com.xshell.xshelllib.view.LockPatternView
        android:id="@+id/gesturepwd_unlock_lockview"
        android:layout_width="280.0dip"
        android:layout_height="280.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0.0dip" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="20dp">

            <TextView
                android:id="@+id/gesturepwd_unlock_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0.0dip"
                android:gravity="center_horizontal"
                android:shadowColor="#e0ffffff"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:text="忘记密码"
                android:textColor="#656565"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/gesturepwd_other_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0.0dip"
                android:gravity="center_horizontal"
                android:shadowColor="#e0ffffff"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:text="其他账号登录"
                android:textColor="#656565"
                android:textSize="14.0sp" />
        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>